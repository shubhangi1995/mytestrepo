{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "script"
  },
  "env": {
      "browser": true,
      "node": true
  },
  "globals": {"Handlebars" : true, "_" : true, "ol" : true, "$" : true, "jQuery" : true, "IPWA_MAP" : true, "__dirname" : true,"d3":true},
  "rules": {
    "quote-props": [1, "consistent-as-needed"],
    "max-len": [1, 120, 2, {"ignoreComments": true}],
    "no-cond-assign": [2, "except-parens"],
    "radix": 0,
    "space-infix-ops": 0,
    "no-unused-vars": [1, {"vars": "local", "args": "none"}],
    "default-case": 0,
    "no-else-return": 0,
    "no-param-reassign": 0,
    "quotes": [2, "single"],

    "linebreak-style": 0,
    "object-shorthand": 0,
    "func-names": 0,
    "comma-dangle": 0,
    "prefer-arrow-callback": 0,
    "no-var": 0,
    "no-plusplus": 0,
    "no-underscore-dangle": 0,
    "vars-on-top": 0,
    "prefer-template": 0,
    "global-require": 0,
    "guard-for-in": 0,
    "no-restricted-syntax": 0,
    "import/no-extraneous-dependencies":  0,
    "import/no-unresolved":  0
  }
}

